<?xml version="1.0"?>
<robot name="visual">

    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>
    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>
    <material name="red">
        <color rgba="0.8 0 0 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.18 0.12 0.03"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <link name="leg_0">
        <visual>
            <origin rpy="0 1.57075 0" xyz="0 0 -0.025"/>
            <geometry>
                <box size="0.065 0.025 0.025"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="base_to_leg_0" type="fixed">
        <parent link="base_link"/>
        <child link="leg_0"/>
        <origin rpy="-1 -1.57075 0" xyz="0.07 -0.05 0"/>
    </joint>

    <link name="leg_connector">
        <visual>
            <origin rpy="0 1.57075 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="leg_connector_to_leg_0" type="continuous">
        <parent link="base_link"/>
        <child link="leg_connector"/>
        <origin rpy="0 0 -1" xyz="0.1 -0.1 0"/>
        <axis rpy="0 0 0" xyz="0 0 1"/>
    </joint>

    <link name="leg_1">
        <visual>
            <origin rpy="0 0 0" xyz="0 0.05 0"/>
            <geometry>
                <box size="0.025 0.065 0.025"/>
            </geometry>
            <material name="green"/>
        </visual>
    </link>

    <joint name="leg_1_joint" type="continuous">
        <parent link="leg_connector"/>
        <child link="leg_1"/>
        <origin rpy="0 0 -1.57075" xyz="0 0 0"/>
    </joint>

     <link name="leg_2">
         <visual>
             <origin rpy="0 0 0" xyz="0 0.05 0"/>
             <geometry>
                 <box size="0.05 0.095 0.015"/>
             </geometry>
             <material name="blue"/>
         </visual>
     </link>

     <joint name="leg_2_joint" type="continuous">
         <parent link="leg_1"/>
         <child link="leg_2"/>
         <origin rpy="0 0 0" xyz="0 0.1 0"/>
     </joint>

</robot>
